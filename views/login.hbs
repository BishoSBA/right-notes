<h3><i class="fas fa-book-reader"></i> RightNotes</h3>

<div class="section">
	<p class="lead">
		Create public and private notes for yourself or the world to see</p>
</div>

<div class="divider"></div>
<div class="section">

	<form action="/auth/login">
		<div class="row">
			<div class="input-field col s12">
				<input id="email" type="email" class="validate" />
				<label for="email">Email</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<input id="password" type="password" class="validate" />
				<label for="password">Password</label>
			</div>
		</div>
		<div>
			<button class="btn waves-effect waves-light" type="submit">
				Login
			</button>
		</div>
	</form>
	<div class="row">
		<a href="#" class="btn green darken-1">
			Sign up
		</a>
	</div>
	<div class="row">
		<a href="/auth/google" class="btn red darken-1">
			<i class="fab fa-google left"></i>
			Login with google
		</a>
	</div>
</div>