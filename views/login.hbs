<h3><a href="#"><img src="../assets/right-notes-logo.svg" /></a></h3>

<div class="section">
	<p class="lead">
		Create public and private notes for yourself or the world to see</p>
</div>

<div class="divider"></div>
<div class="section">

	<form action="/auth/login" method="POST">
		<div class="row">
			<div class="input-field col s12">
				<input id="email" type="email" class="validate" name="email" />
				<label for="email">Email</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<input id="password" type="password" class="validate" name="password" />
				<label for="password">Password</label>
			</div>
		</div>
		<div>
			<button class="btn waves-effect waves-light btn-size" type="submit">
				Login
			</button>
		</div>
	</form>
	<div class="row">
		<a href="/auth/google" class="btn red darken-1 btn-size">
			<i class="fab fa-google left"></i>
			Login with google
		</a>
	</div>
	<div class="row">
		<p>
			Don't have an account?
			<a href="/signup">Create one</a>
		</p>
	</div>
</div>